@{
    ViewData["Title"] = "Department List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <h2>Department List</h2>
    <a class="btn btn-sm btn-primary m-2" id="btnAddDepartment">Add Department</a>
    <table id="departmentTable" class="table table-bordered">
        <thead>
            <tr class="text-center">
                <th>Dept ID</th>
                <th>Dept Name</th>
                <th>Actions</th>
            </tr>
        </thead>
    </table>
</div>

<!-- Department Modal -->
<div id="DepartmentModal" class="modal fade modal" tabindex="-1" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h3 class="modal-title" id="departmentModalTitle">Add Department</h3>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form method="post">
                    <input type="hidden" id="DeptId">
                    <div class="form-group">
                        <label for="DeptName">Department Name</label> 
                        <input type="text" placeholder="Enter Department Name" id="DeptName" class="form-control" required autocomplete="off">
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" onclick="AddDepartment();" id="btnSaveDepartment" class="btn btn-success">Save</button>
                <button type="button" class="btn btn-warning" onclick="UpdateDepartment();" id="btnUpdateDepartment" style="display:none">Update</button>
                <button type="button" class="btn btn-danger btn-default" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>


<link rel="stylesheet" href="https://cdn.datatables.net/2.1.8/css/dataTables.dataTables.css" />
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="https://cdn.datatables.net/2.1.8/js/dataTables.js"></script>


@section Scripts {
    <script src="~/js/department.js"></script>
}
