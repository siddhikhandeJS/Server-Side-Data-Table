@model IEnumerable<RESTAPI.Models.Employee>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <h2 class="text-center text-success font-weight-bold">Employee Listing</h2>
    <div class="row">
        <div class="col-8 offset-2">
            <table class="table table-bordered" id='dataTableData'>
                <thead>
                    <tr class="text-center">
                        <td>EmpID</td>
                        <td>EmpName</td>
                        <td>Email</td>
                        <td>Phone</td>
                        <td>Designation</td>
                    </tr>
                </thead>
                @foreach (var d in Model)
                {
                    <tr class="text-center">
                        <td>@d.EmpId</td>
                        <td>@d.EmpName</td>
                        <td>@d.Email</td>
                        <td>@d.Phone</td>
                        <td>@d.Designation</td>
                    </tr>
                }
            </table>
        </div>
    </div>
</div>

@section scripts {
		<script src="~/js/datatablefile.js"></script>   
}