<body>
    <form action="/Employee/Update" method="post">
        <label for="id">Employee Id</label>
        <input type="text" name="eid" value="@Model.EmpId" readonly required>

        <label for="name">Employee Name</label>
        <input type="text" name="name" value="@Model.EmpName" required>

        <label for="email">Email</label>
        <input type="email" name="email" value="@Model.Email" required>

        <label for="phone">Phone Number</label>
        <input type="tel" name="phone" value="@Model.Phone" required>

        <label for="designation">Designation</label>
        <input type="text" name="designation" value="@Model.Designation" required>

        <label for="dId">Department Id</label>
        <input type="text" name="dId" value="@Model.DeptId" required>

        <input type="button" value="edit" />
    </form>
</body>